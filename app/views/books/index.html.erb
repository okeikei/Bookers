<p id="notice">
  <%= flash[:notice] %>
</p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book), class:'show_#{books.id}' %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" }  %></td>
    </tr>
    <% end %>
  </thead>
</table>

<h2>New book</h2>
<% if flash.now[:error] %>
<div id="error_explanation">
      <h2>2 errors prohibited this book from being saved:</h2>
      <ul>
        <li>Title can't be blank</li>
        <li>Body can't be blank</li>
      </ul>
  </div>
</div>
<% end %>
<%= form_for(@book) do |f| %>
<% if flash.now[:error] %>
<div class="field_with_errors">
  <div class="field">
</div>
<% end %>
  <label for="book_title">Title</label>
</div>
  <%= f.text_field :title %>
<% if flash.now[:error] %>
 <div class="field_with_errors">
<div class="field">
</div>
<% end %>
  <label for="book_title">Body</label>
</div>
  <%= f.text_area :body %>
<div>
  <%= f.submit 'Create Book' %>
</div>
<% end %>